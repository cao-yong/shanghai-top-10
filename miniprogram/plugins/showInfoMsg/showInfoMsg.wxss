.info-wrap{
    width: 100%;
    height: 100%;
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0,0,0,0);
    z-index: 101;
}
.info-msg{
    width: 62%;
    position: fixed;
    top: 50%;
    left: 50%;
    transform: translate(-50%,-50%);
    -webkit-transform: translate(-50%,-50%);
    background: rgba(0,0,0,0.75);
    font-size: 32rpx;
    color: #fff;
    line-height: 40rpx;
    padding: 80rpx 70rpx;
    text-align: center;
    border-radius: 8rpx;
    box-sizing:border-box;
}