.oneLine {
  display: -webkit-box;
  -webkit-line-clamp: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  word-break: break-all;
  -webkit-box-orient: vertical;
}

.scenic {
  width: calc((100% - 20rpx)/2);
  height: 350rpx;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 20rpx 3rpx rgba(0, 0, 0, 0.10);
  margin-bottom: 30rpx;
  padding-bottom: 24rpx;
  float: left;
  background: #fff;
}

.scenic:nth-child(2n+1) {
  margin-right: 20rpx;
}

.scenic image {
  width: 100%;
  height: 220rpx;
  border-top-left-radius: 16rpx;
  border-top-right-radius: 16rpx;
}

.verticalOne {
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}

.imgBox {
  position: relative;
  width: 100%;
  height: 250rpx;
}

.imgBox image {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
}

.imgBox .type {
  position: absolute;
  top: 0rpx;
  left: 0rpx;
  color: white;
  background-color: rgba(49, 228, 13, 0.8);
  padding: 5rpx;
  border-radius: 15rpx;
  border-top-right-radius: 0;
  font-size: 25rpx;
}

.imgBox .region {
  position: absolute;
  bottom: 0;
  right: 0;
  color: white;
  background-color: rgba(129, 129, 133, 0.932);
  text-align: center;
  height: 40rpx;
  line-height: 40rpx;
  padding: 0 20rpx;
  font-size: 20rpx;
}

.address {
  font-size: 20rpx;
}

.hot {
  margin-top: 10rpx;
}

.hot .typeList {
  margin-top: 10rpx;
  width: 100%;
  display: flex;
  justify-content: space-between;
}

.hot .typeList view {
  width: 130rpx;
  height: 70rpx;
  text-align: center;
  line-height: 70rpx;
  font-size: 30rpx;
  color: black;
  border: 1px solid #e6e6e6;
  border-radius: 20rpx;
}

.hot .typeList .selected {
  color: white;
  background-color:rgba(34, 196, 182, 0.527)
}

.scrollBox {
  overflow: hidden;
  white-space: nowrap;
}

.hot .scrollList {
  width: 100%;
  height: 300rpx;
}

.hot .scrollList .scrollItem {
  width: 220rpx;
  height: 100%;
  display: inline-block;
  margin-left: 20rpx;
}
